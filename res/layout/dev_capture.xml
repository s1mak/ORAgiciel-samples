    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.orasgiciel.samples.CaptureActivity"
    tools:ignore="MergeRootFrame" >

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/devCaptureText"
        android:layout_width="match_parent"
