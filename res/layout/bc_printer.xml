<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#803399FF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bcPrinterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:columnCount="2"
        android:rowCount="4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="C : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/bcPrinterProgressBarMagenta"
            style="@style/PrinterMagentaProgressBarHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="M : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/bcPrinterProgressBarCyan"
            style="@style/PrinterCyanProgressBarHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Y : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/bcPrinterProgressBarYellow"
            style="@style/PrinterYellowProgressBarHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="K : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/bcPrinterProgressBarKey"
            style="@style/PrinterKeyProgressBarHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="3" />
    </GridLayout>

</LinearLayout>